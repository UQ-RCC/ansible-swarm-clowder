##

##
# Global Defaults
##
Host *
    EnableSSHKeysign yes
    HashKnownHosts yes

{% for host in ssh_server_hosts %}
{% set ips = ['ansible_all_ipv4_addresses', 'ansible_all_ipv6_addresses', 'inventory_hostname', 'ansible_hostname'] | map('extract', hostvars[host]) | flatten | unique -%}
Host {{ ips | join(' ') }}
    IdentitiesOnly yes
    PasswordAuthentication no
    PubkeyAuthentication yes
    HostbasedAuthentication yes

{% endfor %}
